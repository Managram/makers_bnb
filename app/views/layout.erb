<!DOCTYPE html>
<html>
  <head>
    <title>MakersBnb</title>
  </head>

  <body>
    <% if current_user %>
      <form action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete">
        <button type="submit">Sign out</button>
      </form>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
    <%= yield %>
  </body>

</html>
