<article id="my-bookings">
  <h1>My Bookings</h1>
  <h2>Pending</h2>
  <ul>
    <% if @pending_requests.count == 0 %>
      No pending bookings
    <% end %>
    <% @pending_requests.each do |request|%>
      <li id="<%=request.id%>">
        Requested on: <%= request.time %>
        Space Name: <%= get_space_name(request.space_id) %>
        Start Date: <%= request.start_date %>
        End Date: <%= request.end_date %>
      </li>
      <% end %>
  </ul>
  <h2>Confirmed</h2>
  <ul>
    <% if @confirmed_requests.count == 0 %>
      No confirmed bookings
    <% end %>
    <% @confirmed_requests.each do |request|%>
      <li id="<%=request.id%>">
        Requested on: <%= request.time %>
        Space Name: <%= get_space_name(request.space_id) %>
        Start Date: <%= request.start_date %>
        End Date: <%= request.end_date %>
      </li>
      <% end %>
  </ul>
  <h2>Declined</h2>
  <ul>
    <% if @declined_requests.count == 0 %>
      No declined bookings
    <% end %>
    <% @declined_requests.each do |request|%>
      <li id="<%=request.id%>">
        Requested on: <%= request.time %>
        Space Name: <%= get_space_name(request.space_id) %>
        Start Date: <%= request.start_date %>
        End Date: <%= request.end_date %>
      </li>
      <% end %>
  </ul>
</article>
