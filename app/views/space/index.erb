<head>
  <link rel="stylesheet" href="/pickmeup.min.css" type="text/css">
  <script src='/jquery.min.js'></script>
  <script type="text/javascript" src="/jquery.pickmeup.min.js"></script>
  <script src='/calendarInterface.js'></script>
</head>

<body>
  <h1> Spaces </h1>

  <form action="/space/new">
    <input type="submit" value="Create a Space">
  </form>

  <form action="/booking-requests">
    <input type="submit" value="View Requests">
  </form>

  <div class="date" data-pmu-format="Y-m-d"> </div>
  <input type="submit" value='Search' id='search'>
  <form action="/space/reset-search" method="post">
    <input type="submit" value="Reset Search">
  </form>

  <ul id='spaces'>
    <% @spaces.each do |space| %>
      <% if @searched_dates == nil %>
        <li>
            <form action="/space/<%= space.id %>/view">
              Space: <%= space.name %>
              <input type="submit" value="view space">
            </form>
        </li>
      <% elsif date_match(@searched_dates, space).empty? %>
        <li>
            <form action="/space/<%= space.id %>/view">
              Space: <%= space.name %>
              <input type="submit" value="view space">
            </form>
        </li>
      <% end %>
    <% end %>
  </ul>
</body>
