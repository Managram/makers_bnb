<section id="list-a-space">
  <h1>List a Space</h1>
  <form action="/space/new" method="post">
    <p>
      <label for="name">Space Name:</label>
    <p>
    </p>
      <input type="text" name="name" required>
    </p>
    <p>
      <label for="description">Space Description:</label>
    </p>
    <p>
      <textarea type="text" name="description" required></textarea>
    </p>
    <p>
      <label for="price">Space Price:</label>
    </p>
    <p>
      <input type="number" name="price" min=0 required>
    </p>
    <p>
      <button type="submit">List Space</button>
    </p>
  </form>

  <form action="/space/index">
    <button type="submit">Back to Index</button>
  </form>
</section>
